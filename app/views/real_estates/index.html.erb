<%# INDEX INFOS %>
<div class="container" id="crypto">
    <div class="en-tete">
      <h1>MY REAL ESTATE</h1>
      <%= link_to "Add a property", new_real_estate_path, class: "" %>

      <div class = "container" id = "crypto-index">
        <div class = "container" id = "crypto-index">
  <%# INDEX REAL ESTATE %>
  <% @total = 0 %>

      <% @real_estates.each do |real_estate| %>
  <div class = "card-estate">
              <h2><%= real_estate.description %></h2>
              <p>Category: <%= real_estate.category %></p>
              <p>Type: <%= real_estate.type_of %></p>
              <p>Floor space: <%= real_estate.floor_space %>m²</p>
              <p>Address: <%= real_estate.address %></p>
              <p>Date of purchase: <%= real_estate.date_of_purchase %></p>
              <p>Purchase price: <%= real_estate.purchase_price %>€</p>
              <p>Estimated price: <%= real_estate.estimation %>$</p>
              <p>Total gains: <%= real_estate.gain if real_estate.estimation %>$</p>
        <div class = "crypto-link">
          <%= link_to "edit", edit_real_estate_path(real_estate) %>
          <%= link_to "delete", real_estate_path(real_estate), data: { method: :delete, confirm: "Are you sure ?" } %>
        </div>
    </div>
      <% end %>
      </div>
</div>

          <h3>Total Gains : <%= RealEstate.all_gain %> $</h3>
          <h3>Total Unity cost : <%= RealEstate.all_purchase_price %> $</h3>
          <h3>Total Actual cost : <%= RealEstate.all_estimation %> $</h3>
  </div>
</div>
